---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="post-layout">
  {%- if curiosities %}
    <section class="post-content with-aside">
      <h1>{{ title }}</h1>
      {{ content | safe }}
    </section>
    <aside class="post-aside">
      <h2>üí° More</h2>
      <ul>
      {%- for curiosity in curiosities %}
        <li>{{ curiosity }}</li>
      {%- endfor %}
      </ul>
    </aside>
  {%- else %}
    <section class="post-content">
      <div class="post-header">        
        <section>
        {%- if date %}
          <time datetime="{{ page.date | htmlDateString }}">{{ date | readableDate }}</time>
        {%- endif %}
        </section>

        <section>
          {%- for tag in tags | filterTagList -%}
          {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
          <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
          {%- endfor %}
        </section>

        <section class="post-title">
          <h1>{{ title }}</h1>
          <sub>{{ description }}</sub>
        </section>
      </div>

      {{ content | safe }}
    </section>
  {%- endif %}
</div>

{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<div class="footer footer-posts">
  <ul>
    {%- if previousPost %}<li>‚Üê <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a></li>{% endif %}
    {%- if nextPost %}<li><a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a> ‚Üí</li>{% endif %}
  </ul>
</div>
{%- endif %}
{%- endif %}
